<Window x:Class="PiGameMobile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiGameMobile"
        mc:Ignorable="d"
        Title="Pi Memory Game" Height="600" Width="400" ResizeMode="CanMinimize">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Pi Memory Game" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10" Foreground="DarkBlue"/>

        <TextBlock Grid.Row="1" x:Name="PiDisplay" Text="3." FontSize="20"
                   HorizontalAlignment="Center" Margin="10"/>

        <TextBlock Grid.Row="2" x:Name="CounterDisplay" Text="Decimal places: 0"
                   FontSize="16" HorizontalAlignment="Center" Margin="5"/>

        <TextBlock Grid.Row="3" x:Name="StatusDisplay" Text="Type the next digit of Pi"
                   FontSize="14" HorizontalAlignment="Center" Margin="5" Foreground="Green"/>

        <Grid Grid.Row="4" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="1" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="2" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="3" FontSize="24" Margin="5" Click="NumberButton_Click"/>

            <Button Grid.Row="1" Grid.Column="0" Content="4" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="5" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="6" FontSize="24" Margin="5" Click="NumberButton_Click"/>

            <Button Grid.Row="2" Grid.Column="0" Content="7" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="8" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="9" FontSize="24" Margin="5" Click="NumberButton_Click"/>

            <Button Grid.Row="3" Grid.Column="0" Content="." FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="0" FontSize="24" Margin="5" Click="NumberButton_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="Reset" FontSize="16" Margin="5" Click="ResetButton_Click"/>
        </Grid>
    </Grid>
</Window>
